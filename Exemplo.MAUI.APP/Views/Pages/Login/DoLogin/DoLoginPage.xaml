<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Exemplo.MAUI.APP.Views.Pages.Login.DoLogin.DoLoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:component="clr-namespace:Exemplo.MAUI.APP.Views.Components.Inputs"
    xmlns:fontFamily="clr-namespace:Exemplo.MAUI.APP.Constants">
    <VerticalStackLayout Spacing="30">

        <Label
            Margin="0,0,0,10"
            Style="{StaticResource PageTitle}"
            Text="Login" />


        <component:EntryAndLabelComponent
            Title="E-mail"
            Keyboard="Email"
            Placeholder="mateus@testes.com.br" />


        <component:EntryAndLabelPasswordComponent Title="Senha" Placeholder="123456" />

        <VerticalStackLayout
            Margin="0,10,0,40"
            Padding="0,7,0,0"
            HeightRequest="40">

            <Label
                FontFamily="{Static fontFamily:FontFamily.MAIN_FONT_BLACK}"
                HorizontalOptions="End"
                Text="Esqueceu sua senha?"
                TextDecorations="Underline" />

        </VerticalStackLayout>

        <Button Text="Login" />



    </VerticalStackLayout>
</ContentPage>